<resources>

    <style name="Theme.Kmm" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_kmm</item>
        <item name="popupMenuStyle">@style/PopupMenu.Kmm</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Kmm</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Kmm</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Kmm</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Kmm</item>
        <item name="actionModeBackground">@drawable/cab_background_top_kmm</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_kmm</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Kmm</item>

        
    </style>

    <style name="ActionBar.Solid.Kmm" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_kmm</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_kmm</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_kmm</item>
        <item name="progressBarStyle">@style/ProgressBar.Kmm</item>
        <item name="titleTextStyle">@style/MyTheme.TitleTextStyle</item>
    </style>
    
    <style name="MyTheme.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBar.Transparent.Kmm" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_kmm</item>
        <item name="progressBarStyle">@style/ProgressBar.Kmm</item>
    </style>
	
    <style name="PopupMenu.Kmm" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kmm</item>	
    </style>
	
    <style name="DropDownListView.Kmm" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_kmm</item>
    </style>

    <style name="ActionBarTabStyle.Kmm" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_kmm</item>
    </style>
	
    <style name="DropDownNav.Kmm" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_kmm</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_kmm</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_kmm</item>
    </style>
    
    <style name="ProgressBar.Kmm" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_kmm</item>
    </style>
    
    <style name="ActionButton.CloseMode.Kmm" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_kmm</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Kmm.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Kmm</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Kmm</item>
    </style>


</resources>